@model List<NPGeek.Web.Models.Weather>

<div class="today-weather">
    <h1>Today</h1>
    <img src="~/Content/img/weather/@Model[0].ForecastImageName" />
    <p>
        <span>High:</span>
        <span>@Model[0].High</span>
        <span>&#8457;</span> <!--deg F symbol-->
        <span>Low:</span>
        <span>@Model[0].Low</span>
        <span>&#8451;</span> <!--deg C symbol-->
    </p>
    @foreach (var advisory in Model[0].GetAdvisories())
    {
        <p>@advisory</p>
    }
</div>
<div class="four-day-weather">
    @for (int i = 1; i < Model.Count; i++)
    {
        <img src="~/Content/img/weather/@Model[i].ForecastImageName" />
        <p>
            <span>High:</span>
            <span>@Model[i].High</span>
            <span>&#8457;</span> <!--deg F symbol-->
            <span>Low:</span>
            <span>@Model[i].Low</span>
            <span>&#8451;</span> <!--deg C symbol-->
        </p>
    }
</div>