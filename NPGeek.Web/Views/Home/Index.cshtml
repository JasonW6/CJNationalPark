@model List<NPGeek.Web.Models.NationalPark>
@{
    ViewBag.Title = "National Parks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@foreach (var park in Model)
{
    <img class="parkImage" src="~/Content/img/parks/@(park.ParkCode.ToLower()).jpg" />

    <div class="parkinfo">
        <h2><a href="@Url.Action("ParkDetail", "Home", new { id = park.ParkCode })">@park.ParkName</a></h2>
        <p>@park.ParkDecription</p>
    </div>
}
